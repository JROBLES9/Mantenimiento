<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:layout_gravity="top"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="70dp">

    <!-- Form Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/form_background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Step 2: Datos de Mantenimiento -->

        <!-- Maintenance Task Dropdown -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp">
            <TextView
                android:id="@+id/step2Number"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circle_green"
                android:gravity="center"
                android:text=""
                android:layout_marginStart="12dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/step2Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Reporte de una incidencia"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textstyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/incidenciaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Tipo de incidencia"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/incidenciaSpinner"
            android:layout_width="347dp"
            android:layout_height="33dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edittext_background" />

        <!-- Comment Field -->
        <TextView
            android:id="@+id/commentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Comentario"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/commentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Escribe un comentario"
            android:padding="12dp" />


        <!-- Photo Button -->
        <TextView
            android:id="@+id/photoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:text="FotografÃ­a de la incidencia"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/buttonTomafF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_edittext_background"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/textViewLatLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="(0,0)" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/continueButton"
            android:layout_width="268dp"
            android:layout_height="77dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4CAF50"
            android:layout_gravity="center"
            android:padding="16dp"
            android:text="Continuar"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>



</LinearLayout>
