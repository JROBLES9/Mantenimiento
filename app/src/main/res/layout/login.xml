<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo" />

    <!-- Layout flotante en el centro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="32dp"
        android:background="@drawable/rounded_background_with_shadow"
        android:alpha="0.8"> <!-- Añadir esta línea para transparencia -->

        <!-- Título de bienvenida -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIENVENIDO"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Campo de usuario -->
        <TextView
            android:id="@+id/userLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresar usuario"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:layout_marginBottom="16dp"
            android:alpha="1.0" /> <!-- Asegurar que el EditText sea opaco -->

        <!-- Campo de contraseña -->
        <TextView
            android:id="@+id/passwordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresar contraseña"
            android:padding="12dp"
            android:background="@drawable/rounded_edittext_background"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp"
            android:alpha="1.0" /> <!-- Asegurar que el EditText sea opaco -->

        <!-- Botón de Ingresar -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INGRESAR"
            android:textColor="@android:color/white"
            android:backgroundTint="#4CAF50"
            android:padding="16dp"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>